<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='library_book_category_action' model='ir.actions.act_window'>
        <field name="name">Library Books Categories</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="My Library" id="library_base_menu" />
    <menuitem name="Categories" id="library_book_category_menu" parent="library_base_menu" action="library_book_category_action"/>    

    <!-- Category Form View-->
    <record id="library_book_category_view_form" model="ir.ui.view">
        <field name="name">Library Book Categories Form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="parent_id"/>
                        <field name="child_ids"/>
                        <field name="name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Category List View-->
    <record id="library_book_category_view_list" model="ir.ui.view">
        <field name="name">Library Book Categories List</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>            
                <field name="parent_id"/>
                <field name="child_ids"/>
            </tree>
        </field>
    </record>

</odoo>        